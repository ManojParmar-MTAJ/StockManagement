<%= form_with(model: product,local:true) do |form| %>
<% if product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(product.errors.count, "error") %>
  prohibited this user from being saved:</h2>
  <ul>
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<section class="content">
  <div class="row">

    <div class='col-md-12'>

      <div class="box box-primary">


        <div class="box header with -border">
          <div class="box-body">

              <div  class='col-md-6'>

                <div class="form-group">
                  <%= form.label :Product_Name %>
                  <%= form.text_field :Product_Name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :Product_Code %>
                  <%= form.text_field :Product_Code, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :Image %>
                  <%= form.file_field :Image, class: 'form-control' %>
                </div>
                <% if !@product.new_record? %>
                  <div class="form-group">
                    <%= form.label 'Image Preview' %>
                    <%= image_tag product.image, width: 100, height: 100 %>
                  </div>
                <% end %>
                <div class="form-group">
                  <%= form.label :Brand %>
                  <%= form.text_field :Brand, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :Product_Category %>
                  <%= form.text_field :Product_Category, class: 'form-control' %>
                </div>
              </div>
              <div class='col-md-6'>
                <div class="form-group">
                  <%= form.label :Unit %>
                  <%= form.text_field :Unit, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :CGST %>
                  <%= form.number_field :CGST, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :SGST %>
                  <%= form.number_field :SGST, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= form.label :Product_Cost %>
                  <%= form.number_field :Product_Cost, class: 'form-control' %>
                </div>
                <div class="form-group">
                 <%= form.label :Product_Price %>
                 <%= form.number_field :Product_Price, class: 'form-control' %>
               </div>
             </div>  
             <div class="clearfix"></div>
             <div class='col-md-6'>
              <div class='form-group'>
              <%= form.submit class:'btn btn-primary'%> 
              </div>
              </div> 
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>