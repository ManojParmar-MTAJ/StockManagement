<section class="content-header">
  <h1>
    Products
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li >
        <%= link_to 'Product' %>
      </li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class='col-md-offset-8 col-md-4 mar-tp-btm-5' >
            <div class="input-group">
              <%=text_field_tag :search_products_txt, nil, class: 'form-control', placeholder: 'Search Products' %>
              <span class="input-group-btn">
                <button type="submit" id='search_products' class="btn btn-primary btn-flat">Search</button>
              </span>
            </div>
          </div>
          <div class="box-body" id='products_div'>
            <%= render 'products_table' %>
          </div>
        </div>
      </div>
      <div class='col-md-12'>
        <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </section>
  <script>
    $('#search_products').click(function(){
      $.ajax({
        url: 'products',
        dataType: 'script',
        data: {search: $('#search_products_txt').val()}
      })
    })
  </script>
