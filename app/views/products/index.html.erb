<div class="container-wrapper">
  <section class="content-header">
    <h1 align="center">Products</h1>
  </section>
  <table class="table table-stried table border" border="2" align="center">
    <thead>
      <tr>
        <th>product name</th>
        <th>product code</th>
        <th>image</th>
        <th>brand</th>
        <th>product category</th>
        <th>unit</th>
        <th>cgst</th>
        <th>sgst</th>
        <th>product cost</th>
        <th>product price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= product.product_code %></td>
          <td><%= image_tag product.image(:thumb) %></td>
          <td><%= product.brand %></td>
          <td><%= product.product_category %></td>
          <td><%= product.unit %></td>
          <td><%= product.cgst%></td>
          <td><%= product.sgst %></td>
          <td><%= product.product_cost %></td>
          <td><%= product.product_price %></td>
          <td><%= link_to product do %>
          <i class="fa fa-eye"></i>
            <% end %></td>
          <td><%= link_to edit_product_path(product) do %>
              <i class="fa fa-pencil"></i>
            <% end %></td>
        <td><%= link_to  (product), method: :delete, data: { confirm: 'Are you sure?' } do%>
          <i class="fa fa-trash"></i>
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Product', new_product_path %>
