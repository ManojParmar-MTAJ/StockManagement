<section class="content-header">
  <h1>
    Products
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li class="active">
        <%= link_to 'Product' %>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table class="table table-bordered table-hover">
            </section>
            <thead>
              <tr>
                <th>Product name</th>
                <th>Product code</th>
                <th>Image</th>
                <th>Brand</th>
                <th>Product Category</th>
                <th>Unit</th>
                <th>CGST</th>
                <th>SGST</th>
                <th>Product Cost</th>
                <th>Product Price</th>
                <th colspan="3">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
              <tr>
                <td><%= product.product_name %></td>
                <td><%= product.product_code %></td>
                <td><%= image_tag product.image(:thumb) %></td>
                <td><%= product.brand %></td>
                <td><%= product.product_category %></td>
                <td><%= product.unit %></td>
                <td><%= product.cgst%></td>
                <td><%= product.sgst %></td>
                <td><%= product.product_cost %></td>
                <td><%= product.product_price %></td>
                <td><%= link_to product do %>
                  <i class="fa fa-eye"></i>
                  <% end %>
                </td>
                <td><%= link_to edit_product_path(product) do %>
                  <i class="fa fa-pencil"></i>
                  <% end %>
                </td>
                <td><%= link_to (product), method: :delete, data: { confirm: 'Are you sure?' } do%>
                  <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class='col-md-12'>
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
  </div>
</section>
<br>