<%= form_with(model: stock, local: true) do |form| %>
<% if stock.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(stock.errors.count, "error") %>
      prohibited this stock from being saved:
    </h2>

    <ul>
      <% stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header with-border"></div>
        <form role="form">
          <div class="box-body">
            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :supplier_id %>
                <%= form.select :supplier_id, Supplier.pluck(:supplier_name, :id), :prompt => 'Select One' %>
              </div>
              <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" data-provide='datepicker'/>
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div><br>
              <div class="form-group ">
                <%= form.label :product_id %>
                <%= form.select :product_id, Product.pluck(:product_name, :id), :prompt => 'Select One' %>
              </div>
              <div class="form-group ">
                <%= form.label :unit %>
                <%= form.text_field :unit, class: 'form-control', placeholder:'Enter unit' %>
              </div>
              <div class="form-group ">
                <%= form.label :status %>
                <%= form.select :from, [ 'order','pending','recived' ], :prompt => 'Select One' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <%= form.label :total %>
                <%= form.text_field :total, class: 'form-control' %>
              </div>
              <div class="form-group ">
                <%= form.label :note %>
                <%= form.text_area :note , class:'form-control',rows:"3",placeholder:"Enter ..."%>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class='col-md-6'>
              <%= form.submit class: 'btn btn-primary'%></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<% end %>
