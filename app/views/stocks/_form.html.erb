<%= form_with(model: stock, local: true) do |form| %>
<% if stock.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(stock.errors.count, "error") %>
      prohibited this stock from being saved:
    </h2>

    <ul>
      <% stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="content">
  <div class="row">

    <div class="col-md-12">

      <div class="box box-primary">
        <div class="box-header with-border"></div>
        <form role="form">
          <div class="box-body">

            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :supplier_name %>
                <%= form.text_field :supplier_name, class: 'form-control', placeholder: 'Enter Supplier Name' %>
              </div>

              <div class="form-group ">
                <%= form.label :product_id %>
                <%= form.text_field :product_id, class: 'form-control', placeholder:'Enter Product id' %>
              </div>

              <div class="form-group ">
                <%= form.label :unit %>
                <%= form.text_field :unit, class: 'form-control', placeholder:'Enter unit' %>
              </div>

              <div class="form-group ">
                <%= form.label :status %>
                <%= form.text_field :status , class: 'form-control', placeholder:'Enter status'%>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group ">
                <%= form.label :total %>
                <%= form.text_field :total, class: 'form-control' %>
              </div>

              <div class="form-group ">
                <%= form.label :note %>
                <%= form.text_field :note , class: 'form-control', placeholder:'Enter note'%>
              </div>

            </div>
            <div class="clearfix"></div>
            <div class='col-md-6'>
              <%= form.submit class: 'btn btn-primary'%></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<% end %>
