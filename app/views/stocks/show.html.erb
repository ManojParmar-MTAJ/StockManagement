<section class="content">
  <section class="content-header">
    <h1>
      Show Stock
      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li >
        <%= link_to 'stock' %>
      </li>
    </ol>
  </section>

  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <form role="form">
          <div class="box-body">
            <div class="col-md-6">
              <div class="form-group">
                <strong>Supplier Id :</strong>
                <%= @stock.supplier_id %>
              </div>
              <div class="form-group ">
                <strong>Product Id:</strong>
                <%= @stock.product_id %>
              </div>
              <div class="form-group ">
                <strong>Unit:</strong>
                <%= @stock.unit %>
              </div>
              <div class="form-group ">
                <strong>status:</strong>
                <%= @stock.status %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <strong>Total:</strong>
                <%= @stock.total %>
              </div>
              <div class="form-group">
                <strong>Note:</strong>
                <%= @stock.note %>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class='col-md-6'>
              <%= link_to 'Edit', edit_stock_path(@stock),class:'btn btn-primary'%></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
