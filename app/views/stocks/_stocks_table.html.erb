<table class="table table-bordered table-hover">
  <h1 align="center"></h1>
  <thead>
    <tr>
      <th>Supplier Id</th>
      <th>Product Id</th>
      <th>Unit</th>
      <th>Date</th>
      <th>Status</th>
      <th>Total</th>
      <th>Note</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.supplier.supplier_name %></td>
        <td><%= stock.product.product_name %></td>
        <td><%= stock.unit %></td>
        <td><%= stock.date %></td>
        <td><%= stock.status %></td>
        <td><%= stock.total%></td>
        <td><%= stock.note %></td>
        <td><%= link_to stock do %>
          <i class="fa fa-eye" title="show"></i>
        <% end %>
      </td>
      <td><%= link_to edit_stock_path(stock) do %>
        <i class="fa fa-pencil" title="Edit"></i>
      <% end %>
    </td>
    <td><%= link_to (stock), method: :delete, data: { confirm: 'Are you sure?' } do%>
      <i class="fa fa-trash" title="Delete"></i>
    <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>
<%= paginate @stocks, remote: true %>
