<%= form_with(model: sale, local: true) do |form| %>
<% if sale.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(sale.errors.count, "error") %>
      prohibited this sale from being saved:
    </h2>

    <ul>
      <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="content">
  <div class="row">

    <div class="col-md-12">

      <div class="box box-primary">
        <div class="box-header with-border"></div>
        <form role="form">
          <div class="box-body">

            <div class="col-md-6">
              <div class="form-group">
                <%= form.label :customer_id %>
                <%= form.select :customer_id, Customer.pluck(:customer_name, :id), class: 'form-control', prompt: 'Select Customer' %>
              </div>

              <div class="form-group ">
                <%= form.label :product_id %>
                <%= form.select :product_id, Product.pluck(:product_name, :id), class: 'form-control', prompt: 'Select Product' %>
              </div>

              <div class="form-group ">
                <%= form.label :payment_status %>
                <%= form.text_field :payment_status, class: 'form-control', placeholder:'Payment Status' %>
              </div>

              <div class="form-group ">
                <%= form.label :sales_date %>
                <%= form.date_field :sales_date , class: 'form-control', placeholder:'Enter Sales Date'%>
              </div>

              <div class="form-group ">
                <%= form.label :unit %>
                <%= form.text_field :unit , class: 'form-control', placeholder:'Enter Unit'%>
              </div>
            </div>

            <div class="clearfix"></div>
            <div class='col-md-6'>
              <%= form.submit class: 'btn btn-primary'%></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<% end %>
