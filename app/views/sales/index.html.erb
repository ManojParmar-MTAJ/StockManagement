<section class="content-header">
  <h1>
    Sales
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li class="active">
        <%= link_to 'sale' %>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">

      <div class="col-md-12">
        <div class="box">

          <!-- /.box-header -->
          <div class="box-body">
            <table class="table table-bordered table-hover">
              <h1 align="center"></h1>
              <thead>
                <tr>
                  <th>Customer Id</th>
                  <th>Product Id</th>
                  <th>Payment Status</th>
                  <th>Sales Date</th>
                  <th>Unit</th>
                  <th colspan="4">Action</th>
                </tr>
              </thead> <tbody>
                <% @sales.each do |sale| %>
                <tr id=<%= "tr_#{sale.id}" %>>
                  <td><%= sale.customer.customer_name %></td>
                  <td><%= sale.product.product_name %></td>
                  <td><%= sale.payment_status %></td>
                  <td><%= sale.sales_date %></td>
                  <td><%= sale.unit %></td>
                  <td><%= link_to sale do %>
                    <i class="fa fa-eye"></i>
                    <% end %>
                  </td>
                  <td><%= link_to edit_sale_path(sale) do %>
                    <i class="fa fa-pencil"></i>
                    <% end %>
                  </td>
                  <td><%= link_to (sale), method: :delete,remote: true, data: { confirm: 'Are you sure?' } do%>
                    <i class="fa fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class='col-md-12'>
        <%= link_to 'New sale', new_sale_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </section>
  <br>
