<section class="content-header">
  <h1>
    Sales
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
    <li >
      <%= link_to 'sale' %>
    </li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-body">
          <table class="table table-bordered table-hover">
            <div class="col-md-6">
              <div class="form-group" align=right>
                <%= form_tag sales_path, :method => 'get' do %>
                <%= text_field_tag :search, nil,class: 'form-control' %>
                <%= submit_tag "Search", class:'btn btn-primary' %>
                    <% end %>
                  </div>
                </div>
            <h1 align="center"></h1>
            <thead>
              <tr>
                <th>Customer Id</th>
                <th>Product Id</th>
                <th>Payment Status</th>
                <th>Sales Date</th>
                <th>Unit</th>
                <th colspan="4">Action</th>
              </tr>
            </thead>

            <tbody>
              <% @sales.each do |sale| %>
                <tr>
                  <td><%= sale.customer.customer_name %></td>
                  <td><%= sale.product.product_name %></td>
                  <td><%= sale.payment_status %></td>
                  <td><%= sale.sales_date %></td>
                  <td><%= sale.unit %></td>
                  <td><%= link_to sale do %>
                    <i class="fa fa-eye" title="show"></i>
                  <% end %>
                </td>
                <td><%= link_to edit_sale_path(sale) do %>
                  <i class="fa fa-pencil" title="Edit"></i>
                <% end %>
              </td>
              <td><%= link_to (sale), method: :delete, data: { confirm: 'Are you sure?' } do%>
                <i class="fa fa-trash" title="Delete"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @sales %>
  </div>
</div>
</div>
<div class='col-md-12'>
<%= link_to 'New sale', new_sale_path, class: 'btn btn-primary' %>
</div>
</div>
</section>
<br>
