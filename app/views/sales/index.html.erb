<section class="content-header">
  <h1>
    Sales
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li >
        <%= link_to 'sale' %>
      </li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <div class='col-md-offset-8 col-md-4 mar-tp-btm-5' >
            <div class="input-group">
              <%=text_field_tag :search_sales_txt, nil, class: 'form-control', placeholder: 'Search Sales' %>
              <span class="input-group-btn">
                <button type="submit" id='search_sales' class="btn btn-primary btn-flat">Search</button>
              </span>
            </div>
          </div>
          <div class="box-body"id='sales_div'>
            <%= render 'sales_table' %>
          </div>
        </div>
      </div>
      <div class='col-md-12'>
        <%= link_to 'New sale', new_sale_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </section>
  <script>
    $('#search_sales').click(function(){
      $.ajax({
        url: 'sales',
        dataType: 'script',
        data: {search: $('#search_sales_txt').val()}
      })
    })
  </script>
