<section class="content-header">
  <h1>
    Sales
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
    <li >
      <%= link_to 'sale' %>
    </li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class='col-md-offset-6 col-md-6' >
        <%=text_field_tag :search, nil,class: 'form-control',placeholder:'Search for customer names..'%>
         <span class="fa fa-search"></span>
      </div>
        <div class="box-body"id='sales_div'>
          <%= render 'sales_table' %>

  </div>
</div>
</div>
<div class='col-md-12'>
<%= link_to 'New sale', new_sale_path, class: 'btn btn-primary' %>
</div>
</div>
</section>
<script>
$('#search').on('keyup', function(){
  $.ajax({
    url: 'sales',
    dataType: 'script',
    data: {search: $(this).val()}
  })
})
</script>
