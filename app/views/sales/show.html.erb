<section class="content">
  <section class="content-header">
    <h1>
      Show Sale
      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li>
              <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
          <li class="active">
              <%= link_to 'sale' %>
          </li>
    </ol>
  </section>

  <div class="row">

    <div class="col-md-12">

      <div class="box box-primary">

        <form role="form">
          <div class="box-body">

            <div class="col-md-6">
              <div class="form-group">
                <strong>Customer Id:</strong>
                <%= @sale.customer_id %>
              </div>

              <div class="form-group ">
                <strong>Product Id:</strong>
                <%= @sale.product_id %>
              </div>

              <div class="form-group ">
                <strong>Payment status:</strong>
                <%= @sale.payment_status %>
              </div>

              <div class="form-group ">
                <strong>Sales Date:</strong>
                <%= @sale.sales_date %>
              </div>
               <div class="form-group ">
                <strong>Unit:</strong>
                <%= @sale.unit %>
              </div>
            </div>

            <div class="clearfix"></div>
            <div class='col-md-6'>
              <%= link_to 'Edit', edit_sale_path(@sale),class:'btn btn-primary'%></div>

          </div>
        </form>
      </div>
    </div>
  </div>
</section>

