<section class="content-header">
  <h1>
    Products
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li class="active">
        <%= link_to 'Product' %>
      </li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Product name</th>
                  <th>Product code</th>
                  <th>Purchased</th>
                  <th>Sold</th>
                  <th>Profit</th>
                  <th>Loss</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |product| %>
                <tr>
                  <td><%= link_to product.product_name.capitalize, show_product_report_path(product), remote: true %></td>
                  <td><%= product.product_code %></td>
                  <td>(<%= product.stocks.pluck(:unit).compact.sum %>) <%= product.product_cost %></td>
                  <td><%= product.sales.pluck(:unit).compact.sum %></td>
                  <td><%= find_profit(product) %></td>
                  <td><%= find_loss(product) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class='col-md-12'>
        <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="modal fade" id="product_modal"></div>
  </section>