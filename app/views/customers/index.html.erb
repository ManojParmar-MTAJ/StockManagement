<section class="content-header">
  <h1>
    
    Customer

  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li class="active">
        <%= link_to 'Customer' %>
      </li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table class="table table-bordered table-hover">
            </section>
            <thead>
              <tr>
                <th>Customer name</th>
                <th>Email</th>
                <th>Phone no</th>
                <th>Address</th>
                <th>City</th>
                <th colspan="3">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.customer_name %></td>
                <td><%= customer.email %></td>
               
                <td><%= customer.phone_no %></td>
                <td><%= customer.address  %></td>
                <td><%= customer.city %></td>
                
                <td><%= link_to customer do %>
                  <i class="fa fa-eye"></i>
                  <% end %>
                </td>
                <td><%= link_to edit_customer_path(customer) do %>
                  <i class="fa fa-pencil"></i>
                  <% end %>
                </td>
                <td><%= link_to (customer), method: :delete, data: { confirm: 'Are you sure?' } do%>
                  <i class="fa fa-trash"></i>
                  <% end %>
                </td>
              </tr>
              <% end %>
               </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class='col-md-12'>
    <%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary' %>
  </div>
</div>
</section>
<br>