<section class="content-header">
  <h1>
    Customer
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
    <li >
      <%= link_to 'Customer' %>
    </li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class='col-md-offset-6 col-md-6' >
        <%=text_field_tag :search, nil,class: 'form-control',placeholder:'Search for Customer names..'%>
      </div>
        <div class="box-body" id='customers_div'>
          <%= render 'customers_table' %>

</div>
</div>
</div>
<div class='col-md-12'>
<%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary' %>
</div>
</div>
</div>
</section>
<script>
$('#search').on('keyup', function(){
  $.ajax({
    url: 'customers',
    dataType: 'script',
    data: {search: $(this).val()}
  })
})
</script>
