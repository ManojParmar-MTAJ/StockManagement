<section class="content-header">
  <h1>
    Customer
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li >
        <%= link_to 'Customer' %>
      </li>
    </ol>
  </section>
  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class='col-md-offset-8 col-md-4 mar-tp-btm-5' >
            <div class="input-group">
              <%=text_field_tag :search_customers_txt, nil, class: 'form-control', placeholder: 'Search Customers' %>
              <span class="input-group-btn">
                <button type="submit" id='search_customers' class="btn btn-primary btn-flat">Search</button>
              </span>
            </div>
          </div>
          <div class="box-body" id='customers_div'>
            <%= render 'customers_table' %>
          </div>
        </div>
      </div>
      <div class='col-md-12'>
        <%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</section>
<script>
  $('#search_customers').click(function(){
    $.ajax({
      url: 'customers',
      dataType: 'script',
      data: {search: $('#search_customers_txt').val()}
    })
  })
</script>
