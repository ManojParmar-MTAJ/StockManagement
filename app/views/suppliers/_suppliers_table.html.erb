<table class="table table-bordered table-hover">
  
  <h1 align="center"></h1>
  <thead>
    <tr>
      <th>Supplier Name</th>
      <th>Product Name</th>
      <th>Company Name</th>
      <th>Address</th>
      <th>City Name</th>
      <th>Contact No</th>
      <th>GST NO</th>
      <th colspan="4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr id='tr_<%= supplier.id %>'>
        <td><%= supplier.supplier_name %></td>
        <td><%= supplier.product_name %></td>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.city_name %></td>
        <td><%= supplier.contact_no %></td>
        <td><%= supplier.gst_no %></td>
        <td><%= link_to supplier do %>
          <i class="fa fa-eye" title="show"></i>
        <% end %>
      </td>
      <td><%= link_to edit_supplier_path(supplier) do %>
        <i class="fa fa-pencil" title="Edit"></i>
      <% end %>
    </td>
    <td><%= link_to (supplier), method: :delete, data: { confirm: 'Are you sure?'}, remote: true do%>
      <i class="fa fa-trash" title="Delete"></i>
    <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>
<%= paginate @suppliers , remote: true%>
