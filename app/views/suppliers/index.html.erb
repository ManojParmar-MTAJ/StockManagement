<p id="notice"><%= notice %></p>

<h1 align="center">Suppiler</h1>

<table border="1" align="center" cellspasing="5" cellpadding="5">
  <thead>
    <tr>
      <th>supplier_name</th>
      <th>product_name</th>
      <th>qty</th>
      <th>city_name</th>
      <th>contact_no</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.supplier_name %></td>
        <td><%= supplier.product_name %></td>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.city_name %></td>
        <td><%= supplier.contact_no %></td>
        <td><%= supplier.gst_no %></td>
        <td><%= link_to 'Show',supplier  %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

