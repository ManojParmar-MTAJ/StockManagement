<section class="content-header">
  <h1>
    Suppliers
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
      <li >
        <%= link_to 'supplier' %>
      </li>
    </ol>
  </section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class='col-md-offset-6 col-md-6' >
        <%=text_field_tag :search, nil,class: 'form-control',placeholder:'Search for supplier names..'%>
         <span class="fa fa-search"></span>
      </div>
        <div class="box-body" id='suppliers_div'>
          <%= render 'suppliers_table' %>

  </div>
</div>
</div>
<div class='col-md-12'>
<%= link_to 'New Supplier', new_supplier_path, class: 'btn btn-primary' %>
</div>
</div>
</section>
<script>
$('#search').on('keyup', function(){
  $.ajax({
    url: 'suppliers',
    dataType: 'script',
    data: {search: $(this).val()}
  })
})
</script>
