<section class="content-header">
  <h1>
    Sales Return
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to raw('<i class="fa fa-dashboard"></i> Home'), root_path %>
    <li >
      <%= link_to 'Sales Return' %>
    </li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-body">
          <div class='col-md-offset-8 col-md-4 mar-tp-btm-5' >
            <div class="input-group">
              <%=text_field_tag :search_sales_return_txt, nil, class: 'form-control', placeholder: 'Search SalesReturn' %>
              <span class="input-group-btn">
                <button type="submit" id='search_sales_returns' class="btn btn-primary btn-flat">Search</button>
              </span>
            </div>
          </div>
        <div class="box-body"id='sales_returns_div'>
            <%= render 'sales_returns_table' %>
          </div>
  </div>
</div>
</div>
<div class='col-md-12'>
<%= link_to 'New Sales Return', new_sales_return_path, class: 'btn btn-primary' %>
</div>
</div>
</section>
<script>
  $('#search_sales_returns').click(function(){
    $.ajax({
      url: 'sales_returns',
      dataType: 'script',
      data: {search: $('#search_sales_return_txt').val()}
    })
  })
</script>
